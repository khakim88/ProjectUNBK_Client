@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Simulasi UNBK - Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="shortcut icon" href="~/Assets/global/img/io.png" />

    @Styles.Render("~/CSS/main")

    <link href="~/Assets/pages/css/login.min.css" rel="stylesheet" />

    <style>
        .help-block {
            display: none !important;
        }
    </style>

    @Scripts.Render("~/Script/main")
</head>
<body class="login bg-blue-dark">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="~/Assets/pages/img/logo-unbk-normal.png" alt="" height="80" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @*<form class="login-form" id="login-form" action="<?= base_url('Exam/check_login'); ?>" method="post">*@
        @using (Html.BeginForm("Login", "Exam", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "login-form", @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title font-green">Masuk</h3>
            <div class="alert alert-danger display-hide error-empty" role="alert">
                <span class="close" data-dismiss="alert" type="button"></span>
                <span> Silahkan masukkan Nomor Induk Siswa dan Kata Sandi Anda! </span>
            </div>

            if (ViewBag.Error != null && ViewBag.Error != "")
            {
                <div class="alert alert-danger">
                    <button class="close" data-dismiss="alert" type="button"></button>
                    <span> @ViewBag.Error </span>
                </div>
            }

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Nomor Induk Siswa</label>
                <div class="input-icon">
                    <i class="fa fa-user font-green fa-fw" style="margin-top: 14px"></i>
                    <input class="form-control" type="text" autocomplete="off" placeholder="Nomor Induk Siswa" name="nis" id="nis">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Kata Sandi</label>
                <div class="input-group">
                    <div class="input-icon">
                        <i class="fa fa-lock font-green fa-fw" style="margin-top: 14px"></i>
                        <input class="form-control" type="password" autocomplete="off" placeholder="Kata Sandi" name="password" id="password">
                    </div>
                    <span class="input-group-btn">
                        <button id="btnpass" class="btn btn-success" type="button" style="height: 43px">
                            <i class="glyphicon glyphicon-eye-open fa-fw"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn green uppercase btn-block">
                    Login
                    <!-- <i class="icon-paper-plane"></i>  -->
                </button>
            </div>
        }
        @*</form>*@
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" action="index.html" method="post">
            <h3 class="font-green">Forget your Password?</h3>
            <p> Enter your e-mail address below to reset your password. </p>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn green btn-outline">Back</button>
                <button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
    </div>
    <div class="copyright font-white"> &copy; @DateTime.Now.Year Glora UNBK </div>

    @Scripts.Render("~/Script/jqueryval")

    <script src="~/Assets/pages/scripts/login.js" type="text/javascript"></script>

    <script type="text/javascript">
        $("#btnpass").click(function () {
            var x = document.getElementById("password");
            if (x.type == "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }

            $(this).find(".glyphicon").toggleClass('glyphicon-eye-close').toggleClass('glyphicon-eye-open');
        });
    </script>
</body>
</html>
