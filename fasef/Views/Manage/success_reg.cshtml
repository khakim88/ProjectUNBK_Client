@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Simulasi UNBK - Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="shortcut icon" href="~/Assets/global/img/io.png" />

    @Styles.Render("~/CSS/main")

    <link href="~/Assets/pages/css/login.min.css" rel="stylesheet" />

    @Scripts.Render("~/Script/main")

    <style>
        .help-block {
            display: none !important;
        }
    </style>
</head>
<body class="login bg-blue-dark">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="#">
            <img src="~/Assets/pages/img/logo-unbk-normal.png" alt="" height="80" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" id="login-form" action="<?= base_url('Exam/reg_key_post'); ?>" method="post">
            <h3 class="form-title font-green">SELAMAT !!!</h3>
            <div class="alert alert-block alert-info fade in">
                <!-- <button type="button" class="close" data-dismiss="alert"></button> -->
                <h4 class="alert-heading">Registrasi berhasil, terdaftar dengan informasi :</h4>
                <p>
                    Nama Sekolah : @ViewBag.nama
                </p>
                <p>
                    Dengan Jumlah Siswa : @ViewBag.siswa
                </p>
                <br />
                <p>
                    <i> Klik tombol login di bawah untuk melanjutkan ke halaman admin</i>
                </p>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Registrasi Key Berhasil Disimpan</label>
                <div class="input-icon">
                    <!-- <i class="fa fa-key" style="margin-top: 14px"></i> -->
                    <!-- <input class="form-control" type="text" autocomplete="off" placeholder="key" name="key" id="registration_no">  -->
                </div>
            </div>
            
            <div class="form-actions">
                @Html.ActionLink("Login Admin", "Login", "Manage", null,new { @class="btn green uppercase btn-block"})
                @*<a href="Manage/" >Login Admin</a>*@
                <!-- <button type="submit" class="btn green uppercase btn-block">
        Login Admin  -->
                <!-- <i class="icon-paper-plane"></i>  -->
                <!-- </button> -->
            </div>
        </form>
    </div>
    <div class="copyright font-white"> &copy; @DateTime.Now.Year GLora UNBK</div>

    @Scripts.Render("~/Script/jqueryval")

    <script src="~/Assets/pages/scripts/login.js" type="text/javascript"></script>
</body>
</html>
