                <button class="close" data-close="alert"></button>
                <span> Silahkan masukkan Registrasi Key anda </span>
            </div>

            if (ViewBag.Error != null && ViewBag.Error != "")
            {
            <div class="alert alert-danger">
                <button class="close" data-close="alert"></button>
                <span> @ViewBag.Error  </span>
            </div>
            }
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Masukkan Kode Registrasi</label>
                <div class="input-icon">
                    <i class="fa fa-key" style="margin-top: 14px"></i>
                    <input class="form-control" type="text" autocomplete="off" placeholder="key" name="key" id="registration_no">
                </div>
            </div>
